uniform mat4 mModelViewProjection;
uniform vec3 vCamera;
uniform vec3 vPrimaryLight;

in vec4 Vertex;
in vec3 Normal;
in vec2 TexCoord0;

out vec2 TexCoord;
out vec3 vNormalWS;
out vec3 vViewWS;
out vec3 vLightWS;

void main()
{
 TexCoord  = TexCoord0;
 vNormalWS = Normal;
 vViewWS   = vCamera - Vertex.xyz;
 vLightWS  = vPrimaryLight - Vertex.xyz;
 gl_Position = mModelViewProjection * Vertex;
}