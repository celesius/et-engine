#version 150
precision highp float;

uniform sampler2D display_texture;

in vec2 TexCoord;
out vec4 FragColor;

void main()
{            
 vec4 vColor = texture(display_texture, TexCoord);

 vec4 cEnvColor = vec4(0.3, 0.75, 1.0, 0.0);
 vec4 cColor = vec4(0.2, 0.1, 0.5, 1.0);

 float fExpDensity = 1.0 - exp(-vColor.x);

 FragColor = mix( cEnvColor, cColor, fExpDensity);
}